<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.e.k.m.a.financial.home.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:background="#DDD"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layoutDirection="rtl"
            android:id="@+id/layout_date"
            >
            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="30"
                android:textSize="10sp"
                android:id="@+id/current_day"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="@drawable/ic_panorama_fish_eye_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa 2018"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/current_month"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(من 1/3/2018 الى 31/3/2018)"
            android:textSize="12sp"
            android:layout_below="@id/layout_date"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/month_total_money_tv"
            android:text="315"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المصاريف"
                android:textSize="15sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:scrollbars="vertical" />

</LinearLayout>
